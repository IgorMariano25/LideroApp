<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TelaTransicaoPerguntas">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="380dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@drawable/vetor_conhecendo_perfil_correto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="215dp"
        android:layout_marginStart="32dp"
        android:text="@string/ConhecendoMelhorSeuPerfil"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:text="@string/textoBtnContinuar"
        android:textColor="@color/Lidero_Laranja_Vivo"
        android:textSize="22dp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:strokeColor="@color/Lidero_Laranja_Vivo"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>