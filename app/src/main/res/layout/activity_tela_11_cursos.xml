<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivVetorHome"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:src="@drawable/vetor_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Barra_De_Navegacao_Inferior"
        app:layout_constraintVertical_bias="0.297" />

    <ImageView
        android:id="@+id/ivVetorCursos"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:src="@drawable/vetor_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Barra_De_Navegacao_Inferior"
        app:layout_constraintVertical_bias="0.297" />

    <ImageView
        android:id="@+id/ivVetorPerfil"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:src="@drawable/vetor_perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Barra_De_Navegacao_Inferior"
        app:layout_constraintVertical_bias="0.324" />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:text="@string/Menu"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivVetorHome"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvCursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="3dp"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:text="@string/Cursos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Barra_De_Navegacao_Inferior"
        app:layout_constraintStart_toEndOf="@+id/tvMenu"
        app:layout_constraintTop_toBottomOf="@+id/ivVetorCursos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="56dp"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:text="@string/Perfil"
        android:textAlignment="center"
        android:textColor="@color/Lidero_Amarelo_Ouro"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCursos"
        app:layout_constraintTop_toBottomOf="@+id/ivVetorPerfil" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Barra_De_Navegacao_Inferior"
        android:layout_width="447dp"
        android:layout_height="97dp"
        android:background="@color/Lidero_Carbon"
        android:gravity="center_horizontal"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>